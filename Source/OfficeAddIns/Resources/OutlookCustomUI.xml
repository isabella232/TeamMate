<?xml version="1.0" encoding="utf-8" ?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_OnLoad" loadImage="Ribbon_LoadImage">
  <ribbon>

    <tabs>
      
      <!-- Ribbon additions to the Home tab in the main Outlook explorer -->
      <tab idMso="TabMail">
        
        <!-- insertAfterMso="GroupMailRespond" -->
        <group id="TeamMateTabMailGroup" label="TeamMate">
          <button id="SendSelectionToTeamMate" onAction="Ribbon_OnAction" getEnabled="Ribbon_GetEnabled"
                  label="TeamMate"
                  screentip="Send to TeamMate"
                  supertip="Send selected messages to TeamMate."
                  image="TeamMateIcon"
                  size="large"
                  />
        </group>
      </tab>

      <!-- Ribbon additions to the Message tab in the mail message explorer -->
      <tab idMso="TabReadMessage">

        <!-- insertAfterMso="GroupRespond" -->
        <group id="TeamMateTabReadMessageGroup" label="TeamMate">
          <button id="SendCurrentMailToTeamMate" onAction="Ribbon_OnAction" getEnabled="Ribbon_GetEnabled"
                  label="TeamMate"
                  screentip="Send to TeamMate"
                  supertip="Send message to TeamMate"
                  image="TeamMateIcon"
                  size="large"
                  />
        </group>
      </tab>
    </tabs>
  </ribbon>

  <contextMenus>
    
    <!-- Context menu additions on right-click on one or more mail messages -->
    <contextMenu idMso="ContextMenuMailItem">
      <!-- This would go at the end and add insertBeforeMso="MarkAsRead" -->
      <menuSeparator id="TeamMateContextMenuSeparator" />

      <!-- insertBeforeMso="MarkAsRead" -->
      <button id="SendSelectionToTeamMate2" onAction="Ribbon_OnAction" getEnabled="Ribbon_GetEnabled"
              label="Send to TeamMate"
              screentip="Send to TeamMate"
              supertip="Send message to TeamMate"
              image="TeamMateIcon"
              />
    </contextMenu>
  </contextMenus>

</customUI>
